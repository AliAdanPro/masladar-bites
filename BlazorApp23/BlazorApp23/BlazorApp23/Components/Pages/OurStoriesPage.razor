@page "/our-stories"
@rendermode InteractiveServer

<div class="stories-container">
    <div class="stories-header">
        <h1>Our Story</h1>
        <p>A Journey of Flavor and Tradition</p>
    </div>

    <div class="stories-content">
        <div class="story-section">
            <img src="https://media-cdn.tripadvisor.com/media/photo-s/0f/e8/c5/1f/photo6jpg.jpg" alt="Masladar Bites Origin" class="story-image" />
            <div class="story-text">
                <h2>The Beginning</h2>
                <p>
                    Founded in 2015 in the heart of Islamabad's F6 Markaz, Masladar Bites was born from a passion for authentic Pakistani cuisine blended with innovative culinary techniques. Our founders, a family of seasoned chefs, aimed to bring the rich flavors of the region to every table, creating a dining experience that celebrates tradition and taste.
                </p>
            </div>
        </div>

        <div class="story-section reverse">
            <img src="https://media-cdn.tripadvisor.com/media/photo-s/0e/a8/44/64/photo0jpg.jpg" alt="Masladar Bites Kitchen" class="story-image" />
            <div class="story-text">
                <h2>Our Craft</h2>
                <p>
                    At Masladar Bites, every dish is crafted with love and precision. Our kitchen is a fusion of heritage and modernity, where traditional recipes meet contemporary flair. From handpicked spices to locally sourced ingredients, we ensure each bite tells a story of quality and care.
                </p>
            </div>
        </div>

        <div class="story-section">
            <img src="https://www.bestrestaurants.com.au/media/xerdowre/3.jpg?v=1d7faaa04288e30" alt="Masladar Bites Community" class="story-image" />
            <div class="story-text">
                <h2>Our Community</h2>
                <p>
                    We are proud to be part of Islamabad's vibrant food scene. Masladar Bites is more than a restaurant—it's a gathering place where families, friends, and food lovers come together. Since our inception, we've supported local farmers and artisans, contributing to the community's growth and sustainability.
                </p>
            </div>
        </div>

        <div class="mission-statement">
            <h2>Our Mission</h2>
            <p>
                To serve delicious, authentic meals that reflect the soul of Pakistani cuisine while embracing innovation. We strive to create memorable dining experiences, foster community connections, and uphold the highest standards of quality and service—today and for generations to come.
            </p>
        </div>

        
        <div class="media-mentions">
            <h2>Media Mentions</h2>
            <p>We are honored to be featured in local and national media for our culinary excellence.</p>
            <div class="media-list">
                @if (mediaItems.Any())
                {
                    @foreach (var mediaItem in mediaItems)
                    {
                        <div class="media-item">
                            <h3>@mediaItem.Title</h3>
                            <p>@mediaItem.Description</p>
                            <a href="@mediaItem.Link" target="_blank" class="media-link">Read More</a>
                        </div>
                    }
                }
                else
                {
                    <p>No media mentions available at the moment.</p>
                }
            </div>
        </div>
    </div>

    <div class="stories-footer">
        <p>Established 2015 | F6 Markaz, Islamabad, Pakistan | Phone: (051) 123-4567</p>
        <div class="social-links-section">
            <h3>Follow Us</h3>
            <div class="social-links">
                <a href="https://facebook.com/masladarbites" target="_blank" class="social-icon">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://instagram.com/masladarbites" target="_blank" class="social-icon">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="https://twitter.com/masladarbites" target="_blank" class="social-icon">
                    <i class="fab fa-twitter"></i>
                </a>
            </div>
        </div>
        <a href="/home" class="back-to-menu-btn">Back to Menu</a>
    </div>
</div>

@code {
    private List<MediaItem> mediaItems = new List<MediaItem>
    {
        new MediaItem
        {
            Title = "Best Pakistani Cuisine in Islamabad - Dawn News",
            Description = "Masladar Bites was featured in Dawn News as one of the top restaurants serving authentic Pakistani cuisine in Islamabad.",
            Link = "https://dawn.com/masladar-bites-feature"
        },
        new MediaItem
        {
            Title = "A Culinary Gem in F6 Markaz - The Express Tribune",
            Description = "The Express Tribune highlighted our innovative approach to traditional recipes in their latest food column.",
            Link = "https://tribune.com.pk/masladar-bites"
        }
    };

    private class MediaItem
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string Link { get; set; } = string.Empty;
    }
}

